-- Minimalist Animation Changer (Full + Tabs + Minimize)
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local function getAnimate()
    local char = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
    return char:WaitForChild("Animate")
end

local Animate = getAnimate()
LocalPlayer.CharacterAdded:Connect(function(char)
    Animate = char:WaitForChild("Animate")
end)

-- GUI ROOT
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "AnimationChanger"
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
ScreenGui.Parent = game:WaitForChild("CoreGui")

-- MAIN
local Main = Instance.new("Frame")
Main.Name = "Main"
Main.Parent = ScreenGui
Main.BackgroundColor3 = Color3.fromRGB(71, 71, 71)
Main.BorderSizePixel = 0
Main.Position = UDim2.new(0.42, 0, -1, 0)
Main.Size = UDim2.new(0, 300, 0, 270)
Main.Active = true
Main.Draggable = true

-- TOPBAR
local TopBar = Instance.new("Frame")
TopBar.Name = "TopBar"
TopBar.Parent = Main
TopBar.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
TopBar.BorderSizePixel = 0
TopBar.Size = UDim2.new(1, 0, 0, 30)

