local NORMAL_LIST = {"Astronaut","Bubbly","Cartoony","Elder","Knight","Levitation","Mage","Ninja","Pirate","Robot","Stylish","SuperHero","Toy","Vampire","Werewolf","Zombie"}
local SPECIAL_LIST = {"Patrol","Confident","Popstar","Cowboy","Ghost","Sneaky","Princess"}
local OTHER_LIST = {"None","Anthro"}

-- RENDER
local function clearList()
    for _,c in ipairs(List:GetChildren()) do
        if c:IsA("TextButton") then c:Destroy() end
    end
end

local function makeItem(name)
    local btn = Instance.new("TextButton")
    btn.Parent = List
    btn.Size = UDim2.new(1, -16, 0, 28)
    btn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    btn.TextColor3 = Color3.new(1,1,1)
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 14
    btn.Text = name
    btn.AutoButtonColor = true
    btn.MouseButton1Click:Connect(function()
        local map = animations[name]
        if map then setAnim(map) end
    end)

    local corner = Instance.new("UICorner", btn)
    corner.CornerRadius = UDim.new(0,6)
end

local function render(names)
    clearList()
    for _,name in ipairs(names) do
        makeItem(name)
    end
    task.wait() -- biar UIList update ukuran dulu
    local contentSize = UIList.AbsoluteContentSize.Y + UIPad.PaddingTop.Offset + UIPad.PaddingBottom.Offset
    List.CanvasSize = UDim2.new(0,0,0, math.max(contentSize, List.AbsoluteSize.Y))
end

local function setActiveTab(active)
    -- simple highlight
    BtnNormal.BackgroundColor3 = active=="Normal" and Color3.fromRGB(100,100,100) or Color3.fromRGB(80,80,80)
    BtnSpecial.BackgroundColor3 = active=="Special" and Color3.fromRGB(100,100,100) or Color3.fromRGB(80,80,80)
    BtnOther.BackgroundColor3 = active=="Other" and Color3.fromRGB(100,100,100) or Color3.fromRGB(80,80,80)
end

local currentTab = "Normal"
setActiveTab(currentTab)
render(NORMAL_LIST)

BtnNormal.MouseButton1Click:Connect(function()
    currentTab = "Normal"
    setActiveTab(currentTab)
    render(NORMAL_LIST)
end)
BtnSpecial.MouseButton1Click:Connect(function()
    currentTab = "Special"
    setActiveTab(currentTab)
    render(SPECIAL_LIST)
end)
BtnOther.MouseButton1Click:Connect(function()
    currentTab = "Other"
    setActiveTab(currentTab)
    render(OTHER_LIST)
end)

-- MINIMIZE
local minimized = false
Minimize.MouseButton1Click:Connect(function()
    minimized = not minimized
    if minimized then
        List.Visible = false
        TabBar.Visible = false
        Main.Size = UDim2.new(0, 300, 0, 30)
    else
        Main.Size = UDim2.new(0, 300, 0, 270)
        TabBar.Visible = true
        List.Visible = true
    end
end)

-- ENTER TWEEN
task.wait(0.4)
Main:TweenPosition(UDim2.new(0.421999991, 0, 0.28400004, 0), "Out", "Quad", 0.4, true)
